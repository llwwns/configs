# This tmux statusbar config was created by tmuxline.vim
# on Thu, 18 Mar 2021

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#c3ccdc,bg=#2c3043"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#82aaff"
set -g status-style "none,bg=#2c3043"
set -g message-style "fg=#c3ccdc,bg=#2c3043"
set -g pane-border-style "fg=#2c3043"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=#82aaff,bg=#2c3043"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#c3ccdc,bg=#2c3043"
set -g status-left "#[fg=#092236,bg=#82aaff] [#S] #[fg=#82aaff,bg=#2c3043,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics] #[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics]#[fg=#c3ccdc,bg=#2c3043] %m/%d %H:%M:%S #[fg=#82aaff,bg=#2c3043,nobold,nounderscore,noitalics]#[fg=#092236,bg=#82aaff] #H "
setw -g window-status-format "#[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics]#[default] #I:#W#F #[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics]#[fg=#c3ccdc,bg=#2c3043] #I:#W#F #[fg=#2c3043,bg=#2c3043,nobold,nounderscore,noitalics]"
