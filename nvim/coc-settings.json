{
  "diagnostic.enable": true,
  "diagnostic.displayByAle": true,
  "javascript.validate.enable": false,
  "go.enable": true,
  "go.tags": {
    "tags": "wireinject,test_system"
  },
  "go.goplsPath": "~/go/bin/gopls",
  "go.goplsOptions": {
    "env": {
      "GOFLAGS": "-tags=wireinject,test_system"
    }
  },
  "css.colorDecorators.enable": false,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
